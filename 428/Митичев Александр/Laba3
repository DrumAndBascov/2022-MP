import math as m
def funkciya(f,df,x0,epsil,max_iteraciy):
    xn=x0
    for n in range(0,max_iteraciy):
        fxn=f(xn)
        if abs(fxn)<epsil:
            print('Resheniye posle',n,'iteraciy.')
            return xn
        dfxn=df(xn)
        if dfxn==0:
            print('Nulevaya proizv. Net reshenyya')
            return None
        xn=xn-fxn/dfxn
    print('Previsheno kol-vo iteraciy. Reshenie ne naydeno')
    return None
f=lambda x: m.log(x)+(x+1)**3
df=lambda x:1/x+3*x**2+6*x+3
epsil=float(input('Tochnost: '))
rezultat=funkciya(f,df,1,epsil,10)
print(rezultat)
